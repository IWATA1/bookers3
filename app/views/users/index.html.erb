<p id="notice"></p>
<div class="container px-5 px-sm-0">
    <div class="row">
    <div class="col-md-3">
    <%= render 'books/list', user: @user, book: @book %>
    </div>
 <div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td>
                <span><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback:"no_image.jpg", size:"40x40" %></span>
            </td>
            <td>
                <span><%= user.name %></span>
            </td>
            <td>
                <span><%= link_to "Show", user_path(user.id) %></span>
            </td>
            <td><% if current_user != user %>
        <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
        <% else %>
            <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
        <% end %>
    <% end %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
        </div>

</div>
</div>
</div>
